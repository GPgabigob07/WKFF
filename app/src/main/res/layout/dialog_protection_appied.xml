<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ff000000"
    android:padding="10dp">

  <TextView
      android:id="@+id/ywa_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/ywa"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/shield_img_dialog"
      tools:layout_conversion_wrapHeight="90"
      tools:layout_conversion_wrapWidth="570" />

  <pl.droidsonroids.gif.GifImageView
      android:id="@+id/shield_img_dialog"
      android:layout_width="187dp"
      android:layout_height="176dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="16dp"
      android:src="@drawable/shield_anim"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_conversion_wrapHeight="484"
      tools:layout_conversion_wrapWidth="514" />

  <TextView
      android:id="@+id/dntw_txt"
      android:layout_width="201dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="16dp"
      android:text="@string/dntw"
      android:textAlignment="center"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/shield_img_dialog"
      tools:layout_conversion_wrapHeight="45"
      tools:layout_conversion_wrapWidth="553" />

  <ImageButton
      android:id="@+id/back_btn_skill_dialog"
      android:layout_width="56dp"
      android:layout_height="31dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:background="@color/empty_color"
      android:src="@drawable/back_btn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_conversion_wrapHeight="85"
      tools:layout_conversion_wrapWidth="154" />

</android.support.constraint.ConstraintLayout>