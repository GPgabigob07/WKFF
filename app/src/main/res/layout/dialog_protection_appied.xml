<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ywa_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shield_img_dialog"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="103dp"
        android:text="@string/ywa"
        android:textSize="24sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/shield_img_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="79dp"
        android:src="@drawable/shield_anim" />

    <TextView
        android:id="@+id/dntw_txt"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shield_img_dialog"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="31dp"
        android:text="@string/dntw"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/back_btn_skill_dialog"
        android:layout_width="97dp"
        android:layout_height="45dp"
        android:layout_below="@+id/dntw_txt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:background="@color/empty_color"
        android:src="@drawable/back_btn" />

</RelativeLayout>