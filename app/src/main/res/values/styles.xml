<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonStyle">@style/CustomButtons_Simple</item>
        <item name="android:textViewStyle">@style/textViews</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="CustomDialog" parent="android:Theme.Dialog">

    </style>
    <style name="CustomButtons_Simple" parent="android:Widget.Button">
        <item name="android:selectableItemBackgroundBorderless">@color/cb_border</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/test_btn_shape</item>
    </style>
    <style name="textViews" parent="android:Widget.TextView">
        <item name="android:background">@color/empty_color</item>
    </style>
    <style name="CustomTextInputs" paren-="android:Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
