<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonStyle">@style/CustomButtons_Simple</item>
        <item name="android:textViewStyle">@style/textViews</item>
        <item name="android:editTextStyle">@style/CustomTextInputs</item>
        <item name="android:checkboxStyle">@style/CustomCheckBox</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButtons_Simple" parent="android:Widget.Button">
        <item name="android:selectableItemBackgroundBorderless">@color/cb_border</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/test_btn_shape</item>
    </style>

    <style name="textViews" parent="android:Widget.TextView">
        <item name="android:background">@color/empty_color</item>
    </style>

    <style name="CustomTextInputs" paren-="android:Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/decmo_cursor</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="CustomCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
